{
    "name": "ninja-prep",
    "version": "1.0.0",
    "description": "",
    "main": "dist/server.js",
    "engines": {
        "node": ">=14.x"
    },
    "scripts": {
        "build": "tsc -p .",
        "test": "cross-env MOCHA_TEST=true mocha -r ts-node/register  tst/src/**/*.test.ts",
        "integration-test": "cross-env MOCHA_TEST=true mocha -r ts-node/register  tst/docker/**/*.test.ts",
        "server": "nodemon --verbose --config nodemon.json ./server.ts",
        "client": "cd ../client && yarn start",
        "prod": "cross-env NODE_ENV=production node build/server.js",
        "dev": "cross-env NODE_ENV=development concurrently \"yarn run server\" \"yarn run client\""
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@google-cloud/error-reporting": "^2.0.1",
        "@google-cloud/logging-winston": "^4.0.4",
        "@google-cloud/trace-agent": "^5.1.3",
        "@opencensus/core": "^0.0.22",
        "@opencensus/exporter-stackdriver": "^0.0.22",
        "@stripe/stripe-js": "^1.11.0",
        "body-parser": "^1.19.0",
        "concurrently": "^5.3.0",
        "connect-flash": "^0.1.1",
        "cookie-parser": "^1.4.5",
        "cookie-session": "^1.4.0",
        "cors": "^2.8.5",
        "cross-env": "^7.0.2",
        "express": "^4.17.1",
        "express-http-context": "^1.2.4",
        "express-list-endpoints": "^5.0.0",
        "express-request-id": "^1.4.1",
        "express-session": "^1.17.1",
        "express-winston": "^4.1.0",
        "got": "^11.8.2",
        "lint-staged": "^10.5.3",
        "lodash": "^4.17.20",
        "mongoose": "^5.12.10",
        "nodemon": "^2.0.6",
        "passport": "^0.4.1",
        "passport-facebook": "^3.0.0",
        "passport-github2": "^0.1.12",
        "passport-google-oauth20": "^2.0.0",
        "pretty-quick": "^3.1.0",
        "question-database": "git+ssh://git@github.com:Ninja-Prep/question-database.git#main",
        "react": "^16.13.1",
        "stripe": "^8.132.0",
        "typescript": "^4.2.4",
        "winston": "^3.3.3",
        "yarn": "^1.22.4"
    },
    "comments": {
        "@types/continuation-local-storage": {
            "description": "^3.2.3 is not supported due to export func error. Wait until OpenCensus updates repo to accommodate"
        },
        "@opencensus/exporter-stackdriver@0.0.22": {
            "description": "Has a node-forge dependency issue. This package should be updated as soon as possible on NPM"
        }
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.0",
        "@types/chai": "^4.2.17",
        "@types/continuation-local-storage": "3.2.2",
        "@types/cookie-parser": "^1.4.2",
        "@types/cookie-session": "^2.0.42",
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.11",
        "@types/express-request-id": "^1.4.1",
        "@types/express-session": "^1.17.3",
        "@types/lodash": "^4.14.168",
        "@types/mocha": "^8.2.2",
        "@types/mongoose": "^5.10.5",
        "@types/passport-google-oauth20": "^2.0.7",
        "@types/stripe": "^8.0.417",
        "@types/supertest": "^2.0.11",
        "chai": "^4.3.4",
        "eslint": "^7.4.0",
        "eslint-config-node": "^4.1.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.21.2",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.3.6",
        "jsonschema": "^1.4.0",
        "keygrip": "^1.1.0",
        "mocha": "^8.3.2",
        "prettier": "^2.0.5",
        "supertest": "^6.1.3",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.4"
    },
    "eslintConfig": {
        "extends": [
            "plugin:node/recommended"
        ],
        "rules": {
            "func-names": "off",
            "no-process-exit": "off",
            "no-console": "off",
            "no-unused-vars": "warn",
            "object-shorthand": "off",
            "class-methods-use-this": "off"
        }
    },
    "lint-staged": {
        "src/**/*.js": [
            "eslint --fix"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
