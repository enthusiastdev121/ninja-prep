{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "strict": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "outDir": "build",
        "declaration": true,
        "baseUrl": ".",
        "typeRoots": ["./src/Types", "./@types", "./node_modules/@types"]
    },
    "include": ["./src", "./src/Types/*, ./config"],
    "preserveSymlinks": true
}
