{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "outDir": "build",
        "declaration": true,
        "baseUrl": ".",
        "typeRoots": ["./src/Types", "./@types", "./node_modules/@types"]
    },
    "ts-node": { "files": true },
    "include": ["./src", "./src/Types/*, ./config", "./tst"],
    "exclude": ["./node_modules"],
    "files": ["server.ts"],
    "preserveSymlinks": true
}
